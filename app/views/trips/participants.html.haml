#main
  %h1 Trip Participants
  - if @trip.organizers.include?(current_person)
    %h2 Invite Participant
    != form_for @invitation, :method => :post, :url => invite_trip_path do |f|
      - if @invitation.errors.any?
        #errorExplanation
          %h2 #{pluralize(@invitation.errors.count, 'error')} prohibited the invitation from being sent:
          %ul
            - @invitation.errors.full_messages.each do |msg|
              %li= msg
      != f.label :email, 'Email'
      != f.text_field :email 
      != f.submit 'Invite'
    %h2 Invited Participants
    %ul
      - @invitees.each do |invitee|
        %li= invitee[:email]
  %h2 Current Participants
  %ul
    - @participants.each do |participant|
      %li= participant.name