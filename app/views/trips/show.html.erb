<p id="notice"><%= notice %></p>

<% if @trip.invitees.include?(current_person) %>
<h1><%= link_to "Join this trip", join_trip_path %></h1>
<% end %>

<p>
  <b>Name:</b>
  <%= @trip.name %>
</p>

<p>
  <b>Organizer:</b>
  <%= @trip.organizer.name %>
</p>

<p>
  <b>Time:</b>
  <%= @trip.time %>
</p>

<p>
  <b>Address:</b>
  <%= @trip.address %>
</p>

<% if @trip.organized_by?(current_person) %>
  <%= form_tag(invite_trip_path, :method => :post) do %>
  <%= label_tag(:email, "Enter email of user to invite") %>
  <%= text_field_tag(:email) %>
  <%= submit_tag(:invite) %>
  <% end %>
<% end %>

<ul>
  <% if @trip.organized_by?(current_person)%>
  <li><%= link_to 'Edit', edit_trip_path(@trip) %></li>
  <% end %>
  <li><%= link_to 'Leave Trip', leave_trip_path(@trip), :confirm => 'Are you sure?', :method => :delete %></li>
  <li><%= link_to 'Participants', participants_trip_path(@trip) %></li>
</ul>
