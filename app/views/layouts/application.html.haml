!!! Strict
%html
  %head
    %title Rides - Create a trip. Invite Participants. Go.
    %link{:rel => 'stylesheet', :type => 'text/css', :href => '/stylesheets/style.css'}
    != javascript_include_tag :defaults
    != javascript_include_tag 'http://maps.google.com/maps/api/js?sensor=false'
    != csrf_meta_tag
  %body
    #header
      #logo
        != link_to image_tag("/images/rides.png", :alt => "Rideshare Organizer"), root_path
      #account
        - if person_signed_in?
          %p.large Hello, #{current_person.name}
        - else
          %p.large Not logged in.
        %ul
          - if person_signed_in?
            %li= link_to 'Dashboard', person_root_path
            %li= link_to 'Profile', edit_person_registration_path
            %li= link_to 'Sign out', destroy_person_session_path
          - else
            %li= link_to 'Sign up', new_person_registration_path
            %li= link_to 'Sign in', new_person_session_path
    #main
      %p{:style => 'color: green'}= flash[:notice]
      %p{:style => 'color: red'}= flash[:error]
      %p{:style => 'color: red'}= flash[:alert]
      != yield
    #footer
      %p CS169 Project